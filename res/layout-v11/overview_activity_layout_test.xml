<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical" >
<!--      android:background="#e8e8e8" -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <LinearLayout
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@drawable/square_shadowed"
            android:divider="@color/Gray"
            android:dividerHeight="1px"
            android:orientation="horizontal"
            android:showDividers="end" >

            <TextView
                android:id="@+id/Deposit_Or_Withdrawl_Or_Transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:gravity="left" />

            <TextView
                android:id="@+id/overviewTotalHeader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="@string/overviewTotalHeader"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:typeface="normal" />

            <TextView
                android:id="@+id/fundsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="10"
                android:gravity="right"
                android:hint="$32"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:textAlignment="viewEnd"
                android:textSize="20sp" />

                <!-- android:textAppearance="?android:attr/textAppearanceLarge" -->

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:divider="@color/PowderBlue"
            android:dividerHeight="1px"
            android:paddingBottom="2dp"
            android:scrollbars="none" >

        </ListView>

    </FrameLayout>

</LinearLayout>